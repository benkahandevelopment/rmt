{
    "manifest_version": 2,
    "name": "reddit Match Threader",
    "version": "1.0.0",
    "description": "A tool for generating, updating and managing Match Threads on reddit",
    "homepage_url": "http://www.bkdev.co.uk",
    "short_name": "rMT",
    "browser_action": {
        "name": "reddit Match Threader",
        "default_popup": "popup.html"
    },
    "permissions":[
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "content_scripts":[
        {
            "matches": ["*://*.reddit.com/*"],
            "js": [
                "js/jquery.min.js",
                "js/jqueryui.min.js",
                "js/debug.js",
                "js/replacements.js",
                "js/contentscript.js"
            ],
            "css": ["css/contentscript.css"],
            "run_at": "document_end"
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
        "js/jquery.min.js",
        "js/jqueryui.min.js",
        "js/debug.js",
        "js/replacements.js",
        "js/settings.js"
    ],
    "icons": {
        "16":"icon16.png",
        "32": "icon32.png",
        "64":"icon64.png",
        "128":"icon128.png"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
